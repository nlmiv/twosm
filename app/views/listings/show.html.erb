<h1><%# @listing.name %></h1>

<div class="row">
  <div class="col-md-6">
    <% if @listing.image.present? %>
      <%= cl_image_tag @listing.image, :class => 'feature' if @listing.image.present? %>
    <% else %>
      <%= image_tag '/assets/default.png', :class => 'thumb'%>
    <% end %>

  </div>
  <div class="caption">
    <h4>Name: <%= @listing.name %></h4>
    <p>Price: <%= number_to_currency(@listing.price) %></p>
    <p>Description: <%= @listing.description %></p>
  </div>
</div><br>
<div class="controls">
  <%= link_to 'Edit Listing', edit_listing_path(@listing), :class => 'btn btn-outline-primary' %>
  <%= link_to 'Delete Listing', @listing, :method => 'delete', :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-outline-danger' %>
</div>
