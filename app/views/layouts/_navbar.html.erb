<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <%= link_to '2SM', root_path, :class => 'navbar-brand'   %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to 'Home', root_path, :class => 'nav-link'   %>
        </li>
        <li class="nav-item">
          <%= link_to 'About Us', pages_about_path, :class => 'nav-link'  %>
        </li>
        <li class="nav-item">
          <%= link_to 'Contact Us', pages_contact_path, :class => 'nav-link' %>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <% if @current_user.present? %>
              <%= @current_user.name  %>
            <% else %>
              Welcome Guest
            <% end %>
          </a>
          <ul class="dropdown-menu nav-bar" aria-labelledby="navbarDropdown">
            <% if @current_user.present? %>
              <%= link_to 'Logout', login_path, :method => 'delete', :class => 'dropdown-item' %>
            <% else %>
              <%= link_to 'Login', login_path, :class => 'dropdown-item' %>
            <% end %>

            <% if !@current_user.present? %>
              <li><hr class="dropdown-divider"></li>
              <li><%= link_to 'Sign up', new_user_path, :class => 'dropdown-item' %></li>
            <% else %>
              <li><hr class="dropdown-divider"></li>
              <%= link_to 'Edit Profile', edit_user_path(@current_user.id), :class => 'dropdown-item' %>
            <% end %>
          </ul>
        </li>
    </div>
  </div>
</nav>
