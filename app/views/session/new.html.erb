<h2>Log In</h2>

<% if flash[:error].present? %>
  <p><%= flash[:error] %></p>
<% end %>

<%= form_tag login_path do %> <!-- FOR non CRUD Stuff - no form helpers -->
  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil,:class => 'form-control' %>
  </div>


  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil ,:class => 'form-control' %>
  </div><br>

  <%= submit_tag 'Sign In', :class => 'btn btn-info btn-lg' %>

<% end %>
